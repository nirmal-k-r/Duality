<div class="modal fade" id="modalEditQuestion" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"
  style="display: none;">
  <div class="modal-dialog width-800" role="document">
    <div class="modal-content no-r "><a href="#" data-dismiss="modal" aria-label="Close" class="paper-nav-toggle active"><i></i></a>
      <div class="modal-body no-p">
        <div class="text-center p-40 p-b-0">
          <h3>Edit your Question</h3>
        </div>
        <div class="light p-40 b-t-b">
          <form action="/question/update/<%= question._id %>" method="POST">
              <textarea rows="50" name="content" type="text" class="form-control form-control-lg" placeholder="Question Text"><%= question.rawContent %></textarea>
              <br>
              <input type="submit" class="btn btn-primary btn-lg btn-block" value="Submit">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>